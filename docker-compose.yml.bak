# 移除了过时的 version 标签
services:
  # 这是我们的“前台总机”服务
  nginx:
    image: nginx:latest
    container_name: search-2api-nginx
    restart: always
    ports:
      # 将宿主机的 NGINX_PORT 映射到容器的 80 端口
      - "${NGINX_PORT:-8080}:80"
    volumes:
      # 直接覆盖主配置文件
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - app
    networks:
      - search-net

  # 这是我们的“工人”服务
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: search-2api-app
    restart: unless-stopped
    # 工人不直接对外暴露端口
    env_file:
      - .env
    networks:
      - search-net

networks:
  search-net:
    driver: bridge

